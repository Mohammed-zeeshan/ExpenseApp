<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Expense</title>
</head>
<body>
    <h1>Expense Tracker App</h1>
    <form action="/addexpense" method="POST">
        <div><label for="amount">Amount</label></div>
        <div><input type="number" placeholder="Enter Amount" name="amount" id="amount" required></div>
        <div><label for="description">Description</label></div>
        <div><input type="text" placeholder="Enter description" name="description" id="description" required></div>
        <div><label for="category">Choose category</label></div>
        <div>
            <select name="category" id="category">
                <option value="food">Food</option>
                <option value="fuel">Fuel</option>
                <option value="bills">Bills</option>
            </select>
        </div>
        <div><button type="submit">Submit</button></div>
    </form>
    <% if (expenses.length > 0){%>
        <ul>
            <% for (let exp of expenses) {%>
                <li id="<%= exp.id%>"><%= exp.amount%> - <%= exp.description%> - <%= exp.category%></li>
                <a href="/expense/edit/<%= exp.id%>"> Edit</a>
                <form action="/expense/delete" method="POST">
                    <input type="hidden" name="expenseId" value="<%= exp.id%>">
                    <button type="submit">Delete</button>
                </form>
            <% } %>
        </ul>
    <%}%>
</body>
</html>